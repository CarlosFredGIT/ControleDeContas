@model ControleContas.Presentation.Models.ContasEdicaoModel
@{
    ViewData["Title"] = "Edicao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Atualizar dados da conta</h5>

<p>
    Utilize o formulário para alterar a conta.
</p>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.IdContas)

    <div class="row">
        <div class="col-md-6">
            <label>Nome da Conta:</label>
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.Nome)</span>
        </div>
        <div class="col-md-3">
            <label>Preço da Conta:</label>
            @Html.TextBoxFor(model => model.Preco, new { @class = "form-control" })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.Preco)</span>
        </div>
        <div class="col-md-3">
            <label>Data Vencimento da Conta:</label>
            @Html.TextBoxFor(model => model.DataVencimento, new { @class = "form-control", @type = "date" })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.DataVencimento)</span>
        </div>
    </div>

    <br />

    <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
}